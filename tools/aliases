# Colcon build
alias cb='colcon build --mixin ccache'
# Colcon Build Packages
alias cbp='colcon build --mixin ccache --packages-select'
# Colcon Build Verbose Packages
alias cbvp='colcon build --mixin ccache --event-handlers console_direct+ --packages-select'
# Colcon Build Packages Up-to
alias cbpu='colcon build --mixin ccache --packages-up-to'
# Colcon Build Verbose Packages Up-to
alias cbvpu='colcon build --mixin ccache --event-handlers console_direct+ --packages-up-to'

# Colcon Test Packages
alias ctp='colcon test --packages-select'
# Colcon Test Verbose Packages
alias ctvp='colcon test --event-handlers console_direct+ --executor sequential --packages-select'
# Colcon Test Linters-only Packages
alias ctlp='colcon test --mixin linters-only --packages-select'

# Colcon List package-Names in-Directory
alias clnd='colcon list -n --base-paths'
